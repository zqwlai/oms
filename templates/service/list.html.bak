{% extends 'base.html' %}

{% block content %}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <form method="post" id="query_form">
                        <input name="page"  value="1" style="display:none" />
                        <input  id="url"  value="{{request.path}}" style="display:none" />
                        <div class="form-group row">
                            <label class="col-sm-1 col-form-label">脚本名称</label>
                            <div class="col-md-2">
                                <input type="text" placeholder=".col-md-2" class="form-control"></div>
                            <label class="col-sm-1 col-form-label">创建人</label>
                            <div class="col-md-2">
                                <input type="text" placeholder=".col-md-3" class="form-control"></div>
                            <label class="col-sm-1 col-form-label">Column sizing</label>
                            <div class="col-md-2">
                                <input type="text" placeholder=".col-md-4" class="form-control"></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-1 col-form-label">Column sizing</label>
                            <div class="col-md-2">
                                <input type="text" placeholder=".col-md-2" class="form-control"></div>
                            <label class="col-sm-1 col-form-label">Column sizing</label>
                            <div class="col-md-2">
                                <input type="text" placeholder=".col-md-3" class="form-control"></div>
                            <label class="col-sm-1 col-form-label">Column sizing</label>
                            <div class="col-md-2">
                                <input type="text" placeholder=".col-md-4" class="form-control"></div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">

                                <button class="btn btn-primary btn-sm" type="submit">查询</button></div>
                        </div>
                    </form>



                </div>
            </div>
        </div>
    </div>





    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">


                 </div>
            </div>
        </div>

    </div>


<div class="modal inmodal fade" id="myModal" tabindex="-1" role="dialog" data-backdrop=”static” aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span></button>
                <h4 class="modal-title">新建脚本</h4></div>
            <div class="modal-body">
                <form method="post" id="">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">脚本名:<span class="red">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="name" class="form-control"></div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">脚本描述:<span class="red">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="password"></div>
                    </div>


                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">脚本来源</label>
                        <div class="col-sm-10">
                            <div class="input-group m-b">
                                <div class="radio radio-info radio-inline">
                                            <input type="radio" id="inlineRadio1" value="option1" name="radioInline" checked="">
                                            <label for="inlineRadio1"> 手工录入 </label>
                                        </div>
                                <div class="radio radio-inline">
                                            <input type="radio" id="inlineRadio2" value="option2" name="radioInline">
                                            <label for="inlineRadio2"> 本地脚本 </label>
                                        </div>
                            </div>

                            <div class="input-group m-b">
                                <span class="input-group-btn">

                                <button class="btn btn-success"  type="button" onclick="return openfiledialog()"><i class="fa fa-upload" ></i>&nbsp;&nbsp;<span class="bold">上传脚本</span></button>
                                 </span>
                                 <input type='file' class='filebutton'  onchange='fileSelected()'>
                                 <input type="text" class="form-control" disabled value="扩展名为：.sh、.ksh、.bat、.prl、.pl、.py、.pyc、.ps1" style="color:red">



                            </div>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">脚本内容</label>
                        <div class="col-sm-10">
                            <div class="input-group m-b">

                                <div class="radio radio-info radio-inline">
                                            <input type="radio" id="script_type1" value="option1" name="script_type" checked="">
                                            <label for="script_type1"> shell </label>
                                        </div>
                                <div class="radio radio-inline">
                                            <input type="radio" id="script_type2" value="option2" name="script_type">
                                            <label for="script_type2"> python </label>
                                        </div>
                            </div>

                            <div class="input-group m-b">



                                <textarea id="code" name="code"></textarea>


                            </div>

                        </div>
                    </div>



                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary">保存</button>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
